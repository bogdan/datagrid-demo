-#  Link to the "Next" page
-#  available local variables
-#    url:           url to the next page
-#    current_page:  a page object for the currently displayed page
-#    total_pages:   total number of pages
-#    per_page:      number of items to fetch per page
-#    remote:        data-remote
-# = link_to_unless current_page.last?, t('views.pagination.next').html_safe, url, rel: 'next', remote: remote, class: 'join-item btn'

%a.btn.join-item{rel: 'next', remote:, href: url, class: current_page.last? ? 'btn-active btn-disabled' : ''}
  = t('views.pagination.next').html_safe
