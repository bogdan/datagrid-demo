
<h3>Time Entries Report</h3>


<div class="left">
  <%= form_for @time_entry_report, :html => {:method => :get} do |f| -%>
    <% @time_entry_report.filters.each do |filter| -%>
      <div class="filter">
        <%= f.datagrid_label filter %>
        <%= f.datagrid_filter filter %>
      </div>
      <div class="clear"></div>
    <% end -%>

    <div class="filter">
      <%= f.submit %>
    </div>
    <div class="clear"></div>

  <% end -%>


  <% assets = @time_entry_report.assets.paginate(:page => params[:page]) -%>

  <div class="total">Total: <%= assets.total_entries %></div>
  <%= datagrid_table(@time_entry_report, assets) %>
  <%= will_paginate assets %>
</div>

<div class="right">
  <%= render :partial => "shared/source", :object => @time_entry_report %>
</div>
